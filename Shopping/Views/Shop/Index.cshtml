
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th></th>
        <th></th>
    </tr>
    @foreach(var p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Name</td>
                    <td>@p.Price</td>
                    <td>@p.Qty</td>
                    <td><a href="/Shop/AdddCart/@p.Id" class="btn btn-info">Add to Cart</a></td>
                    <td><a href="/Shop/RemoveCart" class="btn btn-danger">Remove from Cart</a></td>
                </tr>
            }
</table>